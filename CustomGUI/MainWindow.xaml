<Window x:Class="CustomGUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="ACC_projectSetup Wizard" Height="350" Width="900"
        MinHeight="250" MinWidth="700"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Menu
            Grid.Row="0"
            Margin="2">
            <MenuItem x:Name="Config" Header="Config" Click="Config_Click" />

            <MenuItem Header="Import">
                <MenuItem Header="View Project Information" />
            </MenuItem>
            <MenuItem Header="Export">
                <!-- Here Export infos -->
            </MenuItem>
            <MenuItem Header="About"></MenuItem>
        </Menu>

        <TabControl Grid.Row="1">
            <TabItem Header="CSV Toolkit">
                <Grid Background="#FFE5E5E5">
                    <TextBlock HorizontalAlignment="Left"
                           VerticalAlignment="Top"
                           Margin="40,27,0,0"
                           Text="Import CSV Data:"
                           TextWrapping="Wrap"
                           FontSize="16"
                           FontWeight="Bold" />

                    <TextBox x:Name="csvpath"
                         HorizontalAlignment="Left"
                         VerticalAlignment="Top"
                         Margin="207,31,0,0"
                         Text="C:\Users\Example1\example.csv"
                         TextWrapping="Wrap"
                         Width="400"
                         GotKeyboardFocus="csvpath_GotKeyboardFocus" />

                    <Button x:Name="buttonimport"
                        Content="Import"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        Margin="633,30,0,0"
                        Click="buttonimport_Click"
                        Height="20" Width="50" />

                    <TextBlock HorizontalAlignment="Left"
                           VerticalAlignment="Top"
                           Margin="40,77,0,0"
                           Text="Export CSV Data:"
                           TextWrapping="Wrap"
                           FontSize="16"
                           FontWeight="Bold" />

                    <TextBox x:Name="csvpathexp"
                         HorizontalAlignment="Left"
                         VerticalAlignment="Top"
                         Margin="207,79,0,0"
                         Text="C:\Users\%USERNAME%\Desktop\"
                         TextWrapping="Wrap"
                         Width="400" />

                    <Button x:Name="buttonexport"
                        Content="Export"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        Margin="634,78,0,0"
                        Click="buttonexport_Click"
                        Height="20" Width="50" />
                </Grid>
            </TabItem>
            <TabItem Header="UserManagement">
                <DataGrid x:Name="data"
                      HorizontalAlignment="Stretch"
                      IsReadOnly="False"
                      SelectionMode="Single"
                      SelectionUnit="Cell"
                      CanUserAddRows="True"
                      CanUserDeleteRows="True">
                    <!-- Datagrid header-->
                    <!-- Input könnte probleme machen-->
                    <DataGrid.Columns>
                    </DataGrid.Columns>
                </DataGrid>
            </TabItem>
            <!-- remove this tab-->
            <TabItem Header="Config">
                <Grid Background="#FFE5E5E5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*"></ColumnDefinition>
                        <ColumnDefinition Width="3*"></ColumnDefinition>
                    </Grid.ColumnDefinitions>

                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition Height="Auto"></RowDefinition>
                    </Grid.RowDefinitions>

                    <TextBlock
                        HorizontalAlignment="Left"
                               Grid.Column="0"
                               Grid.Row="0"
                        Margin="1"
                               Text="Forge_Client_ID"
                               TextWrapping="Wrap"
                               VerticalAlignment="Top"
                               FontSize="16"
                               FontWeight="Bold" />

                    <TextBlock
                        HorizontalAlignment="Left"
                               Grid.Column="0"
                               Grid.Row="1"
                        Margin="1"
                               Text="Forge_Client_Secret"
                           TextWrapping="Wrap"
                           VerticalAlignment="Top"
                           FontSize="16"
                           FontWeight="Bold" />

                    <TextBlock
                        HorizontalAlignment="Left"
                               Grid.Column="0"
                               Grid.Row="2"
                        Margin="1"
                        Text="Forge_Bim_Account_ID"
                           TextWrapping="Wrap"
                           VerticalAlignment="Top"
                           FontSize="16"
                           FontWeight="Bold" />

                    <TextBox
                        x:Name="clientid"
                             Grid.Column="1"
                             Grid.Row="0"
                             HorizontalAlignment="Stretch"
                        Margin="1"
                             Text="Forge_Client_ID"
                         TextWrapping="Wrap"
                         VerticalAlignment="Top"
                             GotKeyboardFocus="clientid_GotKeyboardFocus" />

                    <TextBox
                        x:Name="clientsecret"
                             Grid.Column="1"
                         Grid.Row="1"
                         HorizontalAlignment="Stretch"
                        Margin="1"
                        Text="Forge_Client_Secret"
                         TextWrapping="Wrap"
                         VerticalAlignment="Top"
                        GotKeyboardFocus="clientsecret_GotKeyboardFocus" />

                    <TextBox
                        x:Name="bimid"
                             Grid.Column="1"
                             Grid.Row="2"
                             HorizontalAlignment="Stretch"
                        Margin="1"
                             Text="Forge_Bim_Account_ID"
                         TextWrapping="Wrap"
                         VerticalAlignment="Top"
                        GotKeyboardFocus="bimid_GotKeyboardFocus" />

                    <Button x:Name="saveconf"
                        Content="Save Config"
                        Grid.Column="0"
                        Grid.Row="3"
                        Grid.ColumnSpan="2"
                        Margin="2"
                        HorizontalAlignment="Stretch"

                        VerticalAlignment="Top"
                        Click="saveconf_Click"
                        IsDefault="True"
                        Focusable="True" />
                </Grid>
            </TabItem>
        </TabControl>

        <!--Footer-->
        <DockPanel Grid.Row="2">
            <TextBox
                Margin="2"
                Name="statusbar"
                Background="AliceBlue"
                HorizontalContentAlignment="Center" />
        </DockPanel>
    </Grid>
</Window>